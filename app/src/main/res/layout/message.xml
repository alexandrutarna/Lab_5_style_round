<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView  android:id="@+id/message_text_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"/>

    <TextView android:id="@+id/message_time_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text_l"
        android:layout_alignEnd="@+id/message_text_l"
        android:layout_alignRight="@+id/message_text_l"
        android:background="@color/colorPrimaryDark"/>

    <TextView  android:id="@+id/message_text_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:background="@color/colorPrimaryDark"/>

    <TextView android:id="@+id/message_time_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text_r"
        android:layout_alignEnd="@+id/message_text_r"
        android:layout_alignRight="@+id/message_text_r"
        android:background="@color/colorPrimaryDark"/>
</RelativeLayout>
