<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <include layout="@layout/top_back"
            android:id="@+id/topBar"/>


        <ImageView android:id="@+id/bookImage"
            android:layout_marginTop="25dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/topBar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/book"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/bookImage"
            android:layout_centerHorizontal="true"
            android:hint="@string/title"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />



        <TextView
            android:id="@+id/author_hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/author"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/author_hint"
            android:layout_toEndOf="@+id/author_hint"/>




        <TextView
            android:id="@+id/publisher_hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/author"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/publisher"/>

        <TextView
            android:id="@+id/publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/author"
            android:layout_toRightOf="@+id/publisher_hint"
            android:layout_toEndOf="@id/publisher_hint"/>




        <TextView
            android:id="@+id/editionYear_hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/publisher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/editionYear"/>

        <TextView
            android:id="@+id/editionYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/publisher"
            android:layout_toRightOf="@id/editionYear_hint"
            android:layout_toEndOf="@id/editionYear_hint" />




        <TextView
            android:id="@+id/genre_hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/editionYear"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/genre"/>

        <TextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/editionYear"
            android:layout_toRightOf="@+id/genre_hint"
            android:layout_toEndOf="@+id/genre_hint"/>




        <TextView
            android:id="@+id/isbn_hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/genre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/isbn"/>

        <TextView
            android:id="@+id/isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/genre"
            android:layout_toRightOf="@+id/isbn_hint"
            android:layout_toEndOf="@+id/isbn_hint"/>




        <TextView
            android:id="@+id/bookCondition_hint"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/isbn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/bookCondition"/>

        <TextView
            android:id="@+id/bookCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="10dp"
            android:layout_below="@+id/isbn"
            android:layout_toRightOf="@+id/bookCondition_hint"
            android:layout_toEndOf="@+id/bookCondition_hint"/>



        <ImageView
            android:id="@+id/userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/bookCondition"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/profile_image"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/bookCondition"
            android:layout_toRightOf="@+id/userImage"
            android:layout_toEndOf="@id/userImage"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"/>



        <Button
            android:id="@+id/askBookButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_below="@id/userImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/msg_box"
            android:hint="@string/askBook"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/chatButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_below="@id/userImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/msg_box"
            android:hint="@string/openChat"
            android:layout_marginBottom="25dp"/>

    </RelativeLayout>

</ScrollView>